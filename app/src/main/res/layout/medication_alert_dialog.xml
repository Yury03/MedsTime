<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/medication_alert_dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/AD_medicationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/medication_name_placeholder"
            android:textColor="@color/secondary_black_and_white"
            android:textSize="@dimen/text_4_level" />

        <ImageButton
            android:id="@+id/AD_editButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/button_icon_edit" />
    </LinearLayout>

    <TextView
        android:id="@+id/AD_timeAndDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|top"
        android:minHeight="50dp"
        android:text="@string/medication_dosage_placeholder"
        android:textColor="@color/secondary_black_and_white"
        android:textSize="@dimen/text_4_level" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/AD_remindFiveMinButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_weight="0"
        android:background="@drawable/custom_button_no_radius"
        android:backgroundTint="#A4D9DC"
        android:gravity="center"
        android:text="@string/remind_five_minute"
        android:textColor="@color/secondary_black_and_white" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#000000"
        app:srcCompat="@drawable/stroke" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AD_skipButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/custom_button_bottom_left_radius"
            android:backgroundTint="#EB4D4F"
            android:gravity="center"
            android:text="@string/skipped"
            android:textColor="@color/secondary_black_and_white" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="#000000"
            app:srcCompat="@drawable/stroke" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/AD_takenButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_bg_bottom_right_radius"
            android:backgroundTint="#A5F87F"
            android:gravity="center"
            android:text="@string/taken"
            android:textColor="@color/secondary_black_and_white" />
    </LinearLayout>
</LinearLayout>
