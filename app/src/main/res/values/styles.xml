<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ModalBottomSheet" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="behavior_peekHeight">300dp</item>
        <item name="state_collapsed">true</item>
        <item name="android:strokeColor">@color/blue</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSwipeToDismiss">true</item>
    </style>

    <style name="MedicationBanner" parent="Theme.AppCompat.Light.Dialog.Alert">

    </style>

    <style name="AddMedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/meds_time_primary</item>
        <item name="android:textAlignment">textStart</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/black</item>
        <item name="strokeColor">@color/black</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>

    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TimePickerDialog" parent="@style/ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/meds_time_primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AddMedTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/meds_time_primary</item>
        <item name="boxStrokeColor">@color/color_outlined_stroke</item>
    </style>

    <style name="AddMedTextInputLayout.ExposedDropdownMenu" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/meds_time_primary</item>
        <item name="boxStrokeColor">@color/color_outlined_stroke</item>
    </style>

    <style name="MedicationItemButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="textOutlineColor">@color/local_transparent</item>
        <item name="android:textAlignment">textStart</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_6_level</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="iconTint">@color/main_black_and_white</item>
        <item name="marginHorizontal">8dp</item>
    </style>

    <color name="light_secondary_black_and_white">#858585</color>
</resources>